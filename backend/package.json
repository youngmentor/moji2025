{
  "name": "wedding-backend",
  "version": "1.0.0",
  "description": "Backend for wedding photo upload and storage",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "kill-port": "kill -9 $(lsof -ti:5000) 2>/dev/null || echo 'Port 5000 is free'",
    "dev-clean": "npm run kill-port && npm run dev",
    "build": "echo 'No build step needed for Node.js'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
